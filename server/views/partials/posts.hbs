<div id="_grid_container_">
    {{#each data}}
    <div class="post-card animation-fade-in" style="animation-delay: calc({{@index}}ms * 50);">
        <div class="post-card-content" data-id="{{id}}">
            <h1>{{title}}</h1>
            <p>{{content}}</p>
        </div>
        <div class="post-card-options">
            <button class="material-symbols-outlined">edit</button>
        </div>
    </div>
    {{/each}}
</div>